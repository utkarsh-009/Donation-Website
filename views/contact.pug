//- inherting template layout from base.pug
extends base.pug

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css

block content 
    div#container
        h1 Contact Us
        form(action="/contact", method="post", class="myForm")
            input(type="text", class="myInput", name="name", placeholder="Enter Your Name") 
            input(type="phone", class="myInput", name="phone", placeholder="Enter Your Phone No") 
            input(type="email", class="myInput", name="name", placeholder="Enter Your Email") 
            input(type="text", class="myInput", name="add", placeholder="Enter Your Address") 
            input(type="text", class="myInput", name="query", placeholder="Enter Your Query")
            button(class="btn") 
                | Submit 