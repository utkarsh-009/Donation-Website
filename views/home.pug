//- inherting template layout from base.pug
extends base.pug

block scripts
    script(src='/static/index.js')

block style 
    style
      include ../static/style.css

block content
    section#introSection
      div#container_text
        div#head Let's share our life with others.
        div#subhead Donate food, clothes, books to needy ones.
      div#container_image
    section#donationSection
      h2 Donations Accepted 
      div.card
        h3 Food
        div.card-box
          div.card-img
            img(src="static/images/food.png")
          h4 Food donation helps a hungry stomach to stop its rumbling.
      div.card
        h3 Clothes
        div.card-box
          div.card-img
            img(src="static/images/clothes.png")
          h4 One person's trash is another person's treasure - donate old clothes!
      div.card
        h3 Books 
        div.card-box
          div.card-img
            img(src="static/images/books.png")
          h4  A donation of books can change the world.
    section#partnersSection
      div Our Partners
      div.parnters-logos
        img(src="static/images/berkshire-hathaway.png" class="partners-img")
        img(src="static/images/wipro.png" class="partners-img")
        img(src="static/images/tesla.png" class="partners-img")
        img(src="static/images/boa.png" class="partners-img")